#body form
  label
    float none
    
    span
      float none
  
    input, input[type='submit']
      display inline-block
      margin 0 1em 0 0
      
    input[type='text'].big
      width 40em
      
#myActivity, #mySnippets 

  float left
  width 27em
  margin-top 2em
  margin-right 1em
  
  .date
    font-size 0.8em
    
  .unread
    background-color lighten(yellow, 30)
    padding 0.3em 0
    
  .comments
    margin-left 2em
    ul
      margin-top 1em
    li
      background-color #ddd
      margin-top 0.05em
    
    input
      margin 0 0.5em 0 0
      display inline-block
    
.createSnippet
  display inline-block
  margin-top 2em
