!!! 5
html(lang='en')
  head
    title Ninja Coderz
    link(rel='stylesheet', href='/stylesheets/reset.css')
    link(rel='stylesheet', href='/stylesheets/layout.css')
    script(src='/javascripts/jquery-1.6.4.min.js')
  body
  
    #header
      - if (!session.user)
        form#login(action='/login', method='post')
          label
            span Username
            input(type='text', name='username')
          label
            span Password
            input(type='password',name='password')
        
          label(style='position:relative')
            input(type='submit',value='Login!')
            a(href='/signup',style="position:absolute;top:7px;right:40px") register
            
      - else
        #logged Welcome #{session.user.username} 
          a(href='/user/#{session.user.username}') (#{session.user.unreadActivities} unread messages)
          , 
          a(href='/logout') Logout

      h1 
        a(href='/') Ninja Coderz
  
    != messages()
  
    #body!= body